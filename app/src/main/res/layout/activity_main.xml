<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sushant.udacityproject2_footyscore.MainActivity"
    android:orientation="vertical"
    android:background="@color/background"
    android:weightSum="5"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_title"
        android:text="@string/title"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="2">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/column_left">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/arsenallogo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_goal_a"
            android:padding="5dp"
            android:text="@string/default_value"
            android:textSize="50sp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50sp"
            android:id="@+id/button_goal_a"
            android:text="@string/goal_scored"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_offside_a"
            android:padding="5dp"
            android:text="@string/default_value"
            android:textSize="50sp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50sp"
            android:id="@+id/button_offside_a"
            android:text="@string/commit_offside"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_foul_a"
            android:padding="5dp"
            android:text="@string/default_value"
            android:textSize="50sp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/button_foul_a"
            android:text="@string/commit_foul"/>




    </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:id="@+id/column_right">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/tottenhamhotspur"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:id="@+id/text_goal_b"
                android:padding="5dp"
                android:text="@string/default_value"
                android:textSize="50sp"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/button_goal_b"
                android:text="@string/goal_scored"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_offside_b"
                android:padding="5dp"
                android:text="@string/default_value"
                android:textSize="50sp"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/button_offside_b"
                android:text="@string/commit_offside"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_foul_b"
                android:padding="5dp"
                android:text="@string/default_value"
                android:textSize="50sp"
                android:layout_gravity="center"/>

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/button_foul_b"
                android:text="@string/commit_foul"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/button_reset"
        android:layout_gravity="center"

        android:text="@string/reset_all"/>



</LinearLayout>
